<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ws.wolfsoft.shoeshappiness.WalletActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/green" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_below="@+id/mon_solde"
                android:layout_centerHorizontal="true"
                android:background="@drawable/notes" />

            <ImageView
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_alignEnd="@+id/Gestion"
                android:layout_alignRight="@+id/Gestion"
                android:layout_alignTop="@+id/imageView4"
                android:background="@drawable/getmoney" />

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignEnd="@+id/moyens_paiement"
                android:layout_alignRight="@+id/moyens_paiement"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/creditcard"
                android:id="@+id/imageView4" />

            <TextView
                android:id="@+id/mon_solde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Mon solde"
                android:textColor="@color/White"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Gestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:text="Gestion"
                android:textColor="@color/White"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moyens_paiement"
                android:layout_width="93dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:text="Mes moyens de paiement"
                android:textColor="@color/White"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
