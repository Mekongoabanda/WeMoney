<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myQrCodeActivity"
    android:background="@drawable/backqrgray">

    <include layout="@layout/app_bar_layout" android:id="@+id/users_appBar" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="303dp"
        android:layout_height="460dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_appBar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/default_avatar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Name"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/localisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dijon, France"
            android:textColor="@color/white_true"
            android:textSize="14dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            />

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Scannez mon code QR pour m'ajouter sur WeFriends"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="110dp"
            android:textAlignment="center"
            />

        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="245dp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="25dp">

            <ImageView
                android:id="@+id/qrcodep"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/qrcodenoir"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="26dp" />

            <ImageView
                android:id="@+id/coder_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_coder_profil"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="45dp"/>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>





</android.support.constraint.ConstraintLayout>